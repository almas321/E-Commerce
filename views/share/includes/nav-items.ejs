
    <ul class="nav-items">

<!----------------------------------------------------------------- -->  
<!-- if user is not log in then also we want to show products and user cand able to add that product to the card    -->

<% if (!locals.isAdmin) { %>
  <li><a href="/">Shop</a></li>
  <li><a href="/cart">Cart <span class="badge"><%= locals.cart.totalQuantity %></span></a></li>
<% } %>

<!----------------------------------------------------------------- -->
<!-- if user is logged in then show this and check it must be not admin that means only show to the user not to the admin -->

<% if (locals.isAuth && !locals.isAdmin) { %>
  <li><a href="/orders">Orders</a></li>
<% } %>

<!----------------------------------------------------------------- -->
<!-- only for admin -->

<% if (locals.isAdmin) { %>
  <li><a href="/admin/products">Manage Products</a></li>
  <li><a href="/admin/orders">Manage Orders</a></li>
<% } %>
<!----------------------------------------------------------------- -->
<!-- if user is not logged in then show this links -->

<% if (!locals.isAuth) { %>
  <li><a href="/signup">Signup</a></li>
  <li><a href="/login">Login</a></li>
<% } %>

<!-- ------------------------------------------------------------------------------- -->


<% if (locals.isAuth) { %>
  <li>
    <form action="/logout" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
      <button>Logout</button>
    </form>
  </li>
<% } %>
</ul>